<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuSemanal.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <VerticalStackLayout Spacing="5">
                <Label Text="Pollo al Horno" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   TextColor="DarkOrange" />
                <Label Text="Tiempo: 45 minutos" 
                   FontSize="20" 
                   TextColor="Gray" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Ingredientes" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="DarkSlateGray" />
                <Label Text="• 2 pechugas de pollo" FontSize="18" />
                <Label Text="• 1 cucharadita de sal" FontSize="18" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="10">
                <Label Text="Preparación" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="DarkSlateGray" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
